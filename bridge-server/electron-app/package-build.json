{
  "name": "dante-audio-client",
  "version": "20.0.0",
  "description": "Dante Audio Client - Stream audio to Railway",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps && electron-rebuild -f -w naudiodon",
    "rebuild": "electron-rebuild -f -w naudiodon",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "npm run rebuild && electron-builder"
  },
  "build": {
    "appId": "com.soundrolling.dante-audio-client",
    "productName": "Dante Audio Client",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "client-core.js",
      "opus-encoder.js",
      "index.html",
      "package.json",
      "!node_modules/**/*",
      "node_modules/ws/**/*",
      "node_modules/@supabase/**/*",
      "node_modules/express/**/*",
      "node_modules/naudiodon/**/*",
      "!node_modules/naudiodon/{test,examples,*.md,*.ts}",
      "!**/*.{md,ts,map}",
      "!**/*.{spec,test}.js",
      "!**/README*",
      "!**/CHANGELOG*"
    ],
    "asarUnpack": [
      "node_modules/naudiodon/build/Release/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "AudioVideo"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "background": null,
      "icon": null
    }
  },
  "dependencies": {
    "ws": "^8.14.2",
    "naudiodon": "^2.3.4",
    "@supabase/supabase-js": "^2.49.8",
    "express": "^4.18.2",
    "opusscript": "^0.0.8"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  }
}

